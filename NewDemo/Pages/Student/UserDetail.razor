@page "/delete/{StudentId:int}"
@using NewDemo.Models.Model
@using NewDemo.Services.Interface
@inject IStudentInterface _studentService
@inject Microsoft.AspNetCore.Components.NavigationManager NavigationManager
<h2>Delete User</h2>
<br />
<div class="form-group">
    <h4>Do you want to delete this user?</h4>
    <table class="table">
        <tbody>
            <tr>
                <td>Student Id</td>
                <td>@student.Id</td>
            </tr>
            <tr>
                <td>Student Name</td>
                <td>@student.FullName</td>
            </tr>
            <tr>
                <td>Phone No.</td>
                <td>@student.UserName</td>
            </tr>
            <tr>
                <td>Student Emai</td>
                <td>@student.UserEmail</td>
            </tr>
            <tr>
                <td>Phone No.</td>
                <td>@student.Phone</td>
            </tr>
            
        </tbody>
    </table>
</div>
<div class="form-group">
    <input type="submit" value="Delete" @onclick="(async () => await RemoveUser(student.Id))" class="btn btn-danger" />
    <input type="submit" value="Cancel" @onclick="(() => Cancel())" class="btn btn-warning" />
</div>